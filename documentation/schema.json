{
	"title": "Event",
	"type": "object",
	"required": ["time", "description", "user"],
	"properties": {
		      "time": {"type": "date"},
		      	      "description": {"type": "string"},
			      		     "user": {"type": "User"},
					     	     "value": {"type": "integer", "enum": [-1, 0, 1]}
						     }
}

{
	"title": "User",
	"type": "object",
	"required": ["id", "name"],
	"properties": {
		      "id": {"type": "string"},
		      	    "name": {"type": "string"},
			    	    "party": {"type": "string"},
				    	     "events": {"type": "array", "items" : {"type": "Event"}},
					     	       "anthem": {"type": "Song"}
						       }			
}

{
	"title": "Party",
	"type": "object",
	"required": ["id", "host", "playlist"],
	"properties": {
		      "id": {"type": "string"},
		      	    "description": {"type": "string"},
			    		   "host": {"type": "User"},
					   	   "playlist": {"type": "array", "items" : {"type": "Song"}},
						   	       "guests": {"type": "array", "items": {"type": "User"}},
							       		 "changes": {"type": "array", "items": {"type": "Event"}},
									 	    "password": {"type": "string"}
										    }
}

{
	"title": "Song",
	"type": "object",
	"required": ["id"],
	"properties": {
		      "id": {"type": "string"},
		      	    "title": {"type": "string"},
			    	     "artist": {"type": "string"},
				     	       "album": {"type": "string"},
					       		"year": {"type": "integer"},
								"score": {"type": "integer"}
								}
}
